<h1 class="my-4 text-center">Create a New Race</h1>

<div class="container">
  <div class="card">
    <div class="card-header">
      <h5 class="mb-0">Race Information</h5>
    </div>
    <div class="card-body py-4">
      <%= form_with model: @race, local: true do |form| %>
        <div class="form-group mb-3">
          <%= form.label :name, class: "font-weight-bold" %>
          <%= form.text_field :name, class: "form-control", placeholder: "Enter race name" %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :number_of_lanes, class: "font-weight-bold" %>
          <%= form.number_field :number_of_lanes, min: 2, class: "form-control", placeholder: "Enter number of lanes" %>
        </div>

        <%= form.submit "Create Race", class: "btn btn-primary btn-block mt-3" %>
      <% end %>
    </div>
  </div>
</div>